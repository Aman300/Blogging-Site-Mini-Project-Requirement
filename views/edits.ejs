     <div class="text-center">
      <% details.forEach(function(item){ %>
         
        <form class="container p-4" method="post" action="/edit/<%=item._id %>" enctype="multipart/form-data" onsubmit="myFunction()">

        <div class="card text-left">
            <img class="card-img-top w-100" src="https://payu.in/blog/wp-content/uploads/2019/01/Blog-Cover.gif" >
            <br>
            <h1>Edit Blog post</h1>
          <div class="card-body">
            <div class="form-group">
                <div class="form-row">
                    <div class="form-group col-md-6">
                      <label for="Title">Title</label>
                      <input type="text" name="title" id="" class="form-control" placeholder="Enter blog title name" required value="<%=(typeof item!='undefined')? item.title:''%>">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="exampleFormControlFile1">photo</label>
                        <input type="file" name="img" accept="image/png, image/gif, image/jpeg" class="form-control-file" id="exampleFormControlFile1" required value="<%=(typeof item!='undefined')? item.img:''%>">
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="inputAddress">blog content message</label>
                    <textarea class="form-control" name="content" id="inputAddress" rows="10" placeholder="write blog content" required value=""><%=(typeof item!='undefined')? item.content:''%></textarea>
                    </textarea>
                  </div>
                <input type="text" name="signature" id="" class="form-control" placeholder="type you name for signature" required required value="<%=(typeof item!='undefined')? item.signature:''%>"><br>        
                <button type="submit" class="btn btn-success btn-lg form-group ">Post blog</button>
                
            </div>
          </div>
        </div>
        </from>
        <% }) %>
